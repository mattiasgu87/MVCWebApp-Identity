@model CombinedPersonViewModel

@{ ViewData["Title"] = "Person List"; }
<h1>PersonIndex</h1>

<form asp-action="AddLanguage" method="post">
    <div class="create-buttons">
        <input type="submit" value="Add Language to a person" class="btn btn-secondary" />
    </div>
</form>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CreateViewModel.Name" class="control-label"></label>
                    <input asp-for="CreateViewModel.Name" class="form-control" />
                    <span asp-validation-for="CreateViewModel.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreateViewModel.City" class="control-label"></label>
                    <select asp-for="CreateViewModel.City" class="form-control" asp-items="Model.CityList"></select>
                    <span asp-validation-for="CreateViewModel.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreateViewModel.PhoneNumber" class="control-label"></label>
                    <input asp-for="CreateViewModel.PhoneNumber" class="form-control" />
                    <span asp-validation-for="CreateViewModel.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="create-buttons">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Search" method="get">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SearchOptions.SearchTerm" class="control-label"></label>
                    <input asp-for="SearchOptions.SearchTerm" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="SearchOptions.CaseSensitive" class="control-label"></label>
                    <input asp-for="SearchOptions.CaseSensitive" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <form method="get">
                <div class="form-group">
                    <label asp-for="SortOptions.ReverseAplhabeticalOrder" class="control-label"></label>
                    <input asp-for="SortOptions.ReverseAplhabeticalOrder" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Sort by City" asp-controller="Person"
                           asp-action="SortByCity" class="btn btn-primary" />
                    <input type="submit" value="Sort by Name" asp-controller="Person"
                           asp-action="SortByName" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class=" personlist container">

        <div class="row align-items-start">

            <div class="col">
                <h4>Name</h4>
            </div>

            <div class="col">
                <h4>City</h4>
            </div>

            <div class="col">
                <h4>Phone Number</h4>
            </div>

            <div class="col">
                <h4>Delete</h4>
            </div>

            <div class="col">
                <h4>Edit</h4>
            </div>

            <div class="col">
                <h4>Languages</h4>
            </div>

        </div>

        @foreach (Person item in Model.PersonList)
        {
<partial name="_partialPersonView" model="item" />}

    </div>
