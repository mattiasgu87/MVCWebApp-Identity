@model CombinedLanguageViewModel

@{ ViewData["Title"] = "Language Index"; }
<h1>Language Index</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">          
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreateViewModel.LanguageName" class="control-label"></label>
                <input asp-for="CreateViewModel.LanguageName" class="form-control" />
                <span asp-validation-for="CreateViewModel.LanguageName" class="text-danger"></span>
            </div>
            <div class="create-buttons">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row align-items-start">
    <div class="col">
        <h4>Language Name</h4>
    </div>

    <div class="col">
        <h4>Action</h4>
    </div>
</div>

@foreach (var item in Model.LanguageList)
{
<div class="row align-items-start">

    <div class="col">
        <p>@item.LanguageName</p>
    </div>

</div>
}